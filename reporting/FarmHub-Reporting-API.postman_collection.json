{
    "info": {
        "_postman_id": "farmhub-reporting-collection",
        "name": "FarmHub Reporting API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "description": "Postman collection for FarmHub Reporting API endpoints."
    },
    "item": [
        {
            "name": "Farm Summary",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/farms/1/summary",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "farms",
                        "1",
                        "summary"
                    ]
                }
            },
            "response": [
                {
                    "name": "Example Response",
                    "status": "OK",
                    "code": 200,
                    "body": "{\n  \"farm_id\": 1,\n  \"farmer_count\": 5,\n  \"cow_count\": 20,\n  \"total_milk_liters\": 150.5\n}"
                }
            ]
        },
        {
            "name": "Milk Records",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/milk?farm_id=1&farmer_id=2&start_date=2025-08-01&end_date=2025-08-22&limit=10",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "milk"
                    ],
                    "query": [
                        {
                            "key": "farm_id",
                            "value": "1"
                        },
                        {
                            "key": "farmer_id",
                            "value": "2"
                        },
                        {
                            "key": "start_date",
                            "value": "2025-08-01"
                        },
                        {
                            "key": "end_date",
                            "value": "2025-08-22"
                        },
                        {
                            "key": "limit",
                            "value": "10"
                        }
                    ]
                }
            },
            "response": [
                {
                    "name": "Example Response",
                    "status": "OK",
                    "code": 200,
                    "body": "[\n  {\n    \"id\": 1,\n    \"cow_id\": 10,\n    \"cow_tag\": \"A123\",\n    \"farm_id\": 1,\n    \"recorded_by\": 2,\n    \"recorded_by_username\": \"john\",\n    \"date\": \"2025-08-01\",\n    \"quantity_liters\": 5.2\n  }\n]"
                }
            ]
        },
        {
            "name": "Recent Activities",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/activities/recent?limit=5",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "activities",
                        "recent"
                    ],
                    "query": [
                        {
                            "key": "limit",
                            "value": "5"
                        }
                    ]
                }
            },
            "response": [
                {
                    "name": "Example Response",
                    "status": "OK",
                    "code": 200,
                    "body": "[\n  {\n    \"id\": 1,\n    \"cow_id\": 10,\n    \"cow_tag\": \"A123\",\n    \"farm_id\": 1,\n    \"performed_by\": 2,\n    \"performed_by_username\": \"john\",\n    \"activity_type\": \"feeding\",\n    \"notes\": \"Fed with hay\",\n    \"date\": \"2025-08-22\"\n  }\n]"
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000"
        }
    ]
}